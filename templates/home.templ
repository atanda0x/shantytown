package templates

templ Home() {
    @layout("Home") {
        <h1>Help for Slum Communities</h1>
        <p>Shantytown empowerment foundation</p>
        <button class="button" hx-post="/join" hx-swap="outerHTML">
            Join Community
        </button>
        <div class="profile-grid" hx-trigger="load" hx-get="/api/community-members" hx-swap="innerHTML">
            <p>Loading community members...</p>
        </div>
    }
}